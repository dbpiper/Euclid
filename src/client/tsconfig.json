{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "*": [
        "src/*",
        "src/config/@types/*"
      ],
      "App": [
        "src/screens/App"
      ],
      "App/*": [
        "src/screens/App/*"
      ],
      "config": [
        "src/config"
      ],
      "config/*": [
        "src/config/*"
      ],
    },
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src",
    "./src/**/*"
  ],
  "types": [
    "jest",
    "enzyme"
  ]
}
